<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{=T.accepted_language or 'en'}}">
  <head>
    <title>{{=response.title or request.application}}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />     
    {{response.files.append(URL(request.application,'static','library.css'))}}
    {{include 'web2py_ajax.html'}}
  </head>
  <body>
      <table>
        <tr><td colspan="2" class="header"><h1>{{=response.title or response.application}}</h1></td></tr>
        <tr>
          <td class="menu">
            <h3>{{=T('Main Menu')}}</h3>
            {{=A(T('Index'), _href=URL(r=request, f='index')}}
            {{pass}}
            <br />
          </td>
          <td class="content">
            <div class="flash">{{=response.flash or ''}}</div>
            {{include}}
          </td>
        </tr>
        <tr><td colspan="2" class="footer">Copyright 2009 by Jon Prater.  Powered by <a href="http://www.web2py.com/">web2py</a><br/>
        {{import datetime}}
        Server time:  {{=datetime.datetime.now().strftime('%m/%d/%Y %H:%M:%S')}}</td></tr>
      </table>
  </body>
</html>
